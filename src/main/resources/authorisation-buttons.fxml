<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.*?>
<GridPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8"
          fx:controller="com.tobilko.controller.AuthorisationController">
    <columnConstraints>
        <ColumnConstraints percentWidth="50"/>
        <ColumnConstraints percentWidth="50"/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints percentHeight="100"/>
    </rowConstraints>
    <Button GridPane.columnIndex="0" GridPane.rowIndex="0" GridPane.halignment="CENTER" onAction="#handleLogInAction"
            fx:id="logInButton">
        Log in
    </Button>
    <Button GridPane.columnIndex="1" GridPane.rowIndex="0" GridPane.halignment="CENTER" disable="true"
            onAction="#handleLogOutAction" fx:id="logOutButton">Log out
    </Button>
</GridPane>