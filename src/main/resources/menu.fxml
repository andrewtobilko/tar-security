<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.RowConstraints?>
<GridPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8"
          fx:controller="com.tobilko.controller.MenuController">
    <columnConstraints>
        <ColumnConstraints percentWidth="100"/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints percentHeight="100"/>
    </rowConstraints>
    <MenuBar disable="true">
        <Menu mnemonicParsing="false" text="Accounts">
            <MenuItem text="Create an account"/>
            <MenuItem text="Remove the account"/>
            <MenuItem text="Edit the account"/>
            <MenuItem text="Exit"/>
        </Menu>
        <Menu text="Information">
            <MenuItem text="About" id="#informationMenuItem" onAction="#handleDeveloperInformationButtonClick"/>
        </Menu>
    </MenuBar>
</GridPane>